{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "lib": ["es2020"],
      "types": ["node"],
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}